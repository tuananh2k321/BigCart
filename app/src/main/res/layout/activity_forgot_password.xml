<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.ForgotPasswordActivity"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="15dp"
        android:layout_marginBottom="20dp"
        >

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icons8_left_25"
            android:layout_gravity="left"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forget password"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter your email and phone we will send the verification code to reset your password"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/detailColor"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:layout_gravity="left"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/detailColor"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="30dp"
            />
        <LinearLayout
            android:id="@+id/bg_email"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_edit_text"
            android:padding="5dp"
            >

            <ImageView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:src="@drawable/icons8_letter_50"
                android:layout_gravity="center"/>
            <EditText
                android:id="@+id/edt_email"
                android:layout_weight="9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/bg_no_border"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_error_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Invalid email"
            android:layout_gravity="left"
            android:textSize="18sp"
            android:visibility="gone"
            android:textColor="@color/errorColor"
            android:layout_marginTop="5dp"
            />

